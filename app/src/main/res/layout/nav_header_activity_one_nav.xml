        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginRight="85dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:id= "@+id/contactuslyt">

            <ImageView
                android:clickable="true"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:layout_marginVertical="3dp"
                android:tint="@android:color/black"
                android:layout_height="match_parent"
                android:id="@+id/contactusimg"
                android:src="@drawable/contactus"></ImageView>
            <TextView
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:id="@+id/contactustxt"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:layout_toRightOf="@id/contactusimg"
                android:layout_marginLeft="15dp"
                android:gravity="left|center_vertical"
                android:text="Contact us"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginRight="85dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:id= "@+id/sharelyt">

            <ImageView
                android:id="@+id/shareimg"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_marginVertical="3dp"
                android:src="@drawable/share"
                android:tint="@android:color/black"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:background="@android:color/transparent"

                android:textColor="@android:color/black"
                android:id="@+id/sharetxt"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:layout_toRightOf="@id/shareimg"
                android:layout_marginLeft="15dp"
                android:gravity="left|center_vertical"
                android:text="Share"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_marginRight="85dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:id= "@+id/ratelyt">

            <ImageView
                android:clickable="true"
                android:background="@android:color/transparent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_width="50dp"
                android:tint="@android:color/black"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginVertical="3dp"
                android:id="@+id/rateimg"
                android:src="@drawable/rate"></ImageView>
            <TextView
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:id="@+id/ratetxt"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:layout_toRightOf="@id/rateimg"
                android:layout_marginLeft="15dp"
                android:gravity="left|center_vertical"
                android:text="Rate us"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_marginRight="85dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:id= "@+id/abtlyt">

            <ImageView
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21dp"
                android:layout_width="50dp"
                android:background="@android:color/transparent"
                android:tint="@android:color/black"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginVertical="3dp"
                android:id="@+id/abtimg"
                android:src="@drawable/rkix_logo"></ImageView>
            <TextView
                android:layout_width="match_parent"

                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                android:id="@+id/abttxt"
                android:layout_height="match_parent"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:layout_toRightOf="@id/abtimg"
                android:layout_marginLeft="9dp"
                android:gravity="left|center_vertical"
                android:text="About us"/>
        </RelativeLayout>


